<div class="container-fluid">
  <h1 class="text-center">3D WORKS</h1>
  <div class="row three-d">
    <% @works.three_d.rank(:row_order).each do |work| %>
      <div class="col-sm-3 three-d-work">
        <%= image_tag work.image, class: 'thumbnail img-fluid' %>
      </div>
    <% end %>
  </div>
</div>