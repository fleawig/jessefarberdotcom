<div class="container">
  <br />
  <h1>Upload A News Item</h1>
  <br />
  <%= simple_form_for @news_item, url: admin_news_items_path do |f| %>
    <%= f.input :headline %>
    <%= f.input :content %>
    <%= f.input :image %>
    <br />
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <br />
    <% end %>
</div>