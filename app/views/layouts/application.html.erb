      <div class="container">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <li class="nav-item active">
            <%= link_to 'mailto:jesse@jessefarber.com', class: "nav-link" do %>
              <i class="fa fa-envelope-o" aria-hidden="true"></i>
