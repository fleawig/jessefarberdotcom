<!DOCTYPE html>
<html>
  <head>
    <title>Jesse Farber</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if controller_name == "artist_static_pages" %>
    <%= render 'partials/artist_navbar' %>
  <% elsif controller_name == "developer_static_pages" %>
    <%= render 'partials/developer_navbar' %>
<% elsif controller_path.include?('admin') %>
    <%= render 'partials/admin_dashboard_navbar' %>
  <% else %>
    <%= render 'partials/initial_navbar' %>
  <% end %>

  <% if notice.present? %>
      <p class="alert alert-success alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </p>
  <% end %>
  <% if alert.present? %>
      <p class="alert alert-danger alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <%= alert %>
      </p>
  <% end %>

    <%= yield %>

  <% if controller_path.include?('admin') || controller_path.include?('artist') %>
    <%= render 'partials/artist_footer' %>
  <% elsif controller_name == "developer_static_pages" %>
    <%= render 'partials/developer_footer' %>
  <% else %>
    <%= render 'partials/initial_footer' %>
  <% end %>
  
  </body>
</html>
