<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag 'favicon.ico' %>
      <% if yield(:title).present? %>
        <title><%= yield(:title) %> | Jesse Farber</title>
      <% else %>
        <title>Jesse Farber</title>
      <% end %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div id="flex-content-container">
    <% if controller_path.include?('artist') %>
      <%= render 'partials/artist_navbar' %>
    <% elsif controller_name == "developer_static_pages" %>
      <%= render 'partials/developer_navbar' %>
  <% elsif controller_path.include?('admin') %>
      <%= render 'partials/admin_dashboard_navbar' %>
    <% else %>
      <%= render 'partials/initial_navbar' %>
    <% end %>

    <% if notice.present? %>
        <p class="alert alert-success alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <%= notice %>
        </p>
    <% end %>
    <% if alert.present? %>
        <p class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <%= alert %>
        </p>
    <% end %>

      <%= yield %>
    </div>
<% if controller_path.include?('admin') || controller_path.include?('artist') %>
  <div id="footer">
    <div class="container">
      <ul class="navbar-nav mr-auto mt-2 mt-md-0">
        <li class="nav-item active">
          <%= link_to 'mailto:jesse@jessefarber.com', class: "nav-link" do %>
            <i class="fa fa-envelope-o" aria-hidden="true"></i>
          <% end %>
        </li>
        <li class="nav-item active">
        <%= link_to 'http://www.instagram.com/fleashelpkeepitclean/', class: "nav-link" do %>
          <i class="fa fa-instagram" aria-hidden="true"></i>
        <% end %>
        </li>
        <li class="nav-item active">
          <%= link_to 'http://jessefarber.bandcamp.com/', class: "nav-link" do %>
            <i class="fa fa-bandcamp" aria-hidden="true"></i>
          <% end %>
          </li>
        <li class="nav-item active">
        <%= link_to 'http://www.facebook.com/jesse.farber.92', class: "nav-link" do %>
          <i class="fa fa-facebook" aria-hidden="true"></i>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <% elsif controller_name == "developer_static_pages" %>
    <div id="footer">
      <div class="container">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <li class="nav-item active">
            <%= link_to 'mailto:jesse@jessefarber.com', class: "nav-link" do %>
              <i class="fa fa-envelope-o" aria-hidden="true"></i>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% else %>
  <div id="footer">
    <div class="container">
      <ul class="navbar-nav mr-auto mt-2 mt-md-0">
        <li class="nav-item active">
          <%= link_to 'mailto:jesse@jessefarber.com', class: "nav-link" do %>
            <i class="fa fa-envelope-o" aria-hidden="true"></i>
          <% end %>
        </li>
        </li>
      </ul>
    </div>
  </div>
<% end %>
  </body>
</html>
