<!DOCTYPE html>
<html>
  <head>
    <!-- <link 
      rel="stylesheet" 
      href="prism-atom-dark.scss" 
      type="text/css" 
      media="screen" 
    /> -->
    <%= favicon_link_tag 'favicon.ico' %>
      <% if yield(:title).present? %>
        <title><%= yield(:title) %> | Jesse Farber</title>
      <% else %>
        <title>Jesse Farber</title>
      <% end %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Jesse Farber is an artist working with visual and audio montage.">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if Rails.env.production? %>
      <script type="text/javascript">
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-105389268-1', 'auto');
      </script>
    <% end %>
  </head>

  <body>
    <div id="flex-content-container" class="<%= 'flex-home' unless nopic_bg_pages?(controller_path) %>">
      <% if controller_path.include?('artist') %>
        <%= render 'partials/artist_navbar' %>
      <% elsif controller_path.include?('developer') %>
        <%= render 'partials/developer_navbar' %>
      <% elsif controller_path.include?('admin') %>
        <%= render 'partials/admin_dashboard_navbar' %>
      <% end %>

      <% if notice.present? %>
          <p class="alert alert-success alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
            <%= notice %>
          </p>
      <% end %>
      <% if alert.present? %>
          <p class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
            <%= alert %>
          </p>
      <% end %>

      <%= yield %>
    </div>
<% if controller_path.include?('admin') || controller_path.include?('artist') %>
  <div id="footer">
    <div class="container">
      <ul class="navbar-nav mr-auto mt-2">
